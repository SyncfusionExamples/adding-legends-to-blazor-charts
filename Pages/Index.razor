@page "/"

<SfChart Title="Olympic Medals" SelectionMode="SelectionMode.Point" EnableAnimation="true">
    <ChartSeriesCollection>
        <ChartPrimaryXAxis ValueType="Syncfusion.Blazor.Charts.ValueType.Category" Title="Country">
        </ChartPrimaryXAxis>
        <ChartPrimaryYAxis Title="Medals Count"></ChartPrimaryYAxis>
        <ChartSeries DataSource="@ChartData" XName="Country" YName="Gold" Type="ChartSeriesType.Column"
                     Name="Gold" LegendShape="LegendShape.Circle">
        </ChartSeries>
        <ChartSeries DataSource="@ChartData" XName="Country" YName="Silver" Type="ChartSeriesType.Column"
                     Name="Silver" LegendShape="LegendShape.Triangle">
        </ChartSeries>
        <ChartSeries DataSource="@ChartData" XName="Country" YName="Bronze" Type="ChartSeriesType.Column"
                     Name="Bronze" LegendShape="LegendShape.Diamond">
        </ChartSeries>
    </ChartSeriesCollection>
    <ChartLegendSettings Visible="true" Position="LegendPosition.Top" Alignment="Alignment.Far" Height="100" Width="100"
                         ShapeHeight="20" ShapeWidth="20" ToggleVisibility="false"></ChartLegendSettings>
</SfChart>

@code {

    public class ChartDataModel
    {
        public string Country { get; set; }
        public double Gold { get; set; }
        public double Silver { get; set; }
        public double Bronze { get; set; }
    }

    List<ChartDataModel> ChartData = new List<ChartDataModel>
{
        new ChartDataModel { Country= "USA", Gold= 70, Silver= 60, Bronze=45 },
        new ChartDataModel { Country= "China", Gold= 60, Silver= 40, Bronze=55 },
        new ChartDataModel { Country= "Japan", Gold= 70, Silver= 65, Bronze=50 },
        new ChartDataModel { Country= "Australia", Gold= 60, Silver= 55, Bronze=40 },
        new ChartDataModel { Country= "France", Gold= 50, Silver= 45, Bronze=35 },
        new ChartDataModel { Country= "Germany", Gold= 40, Silver= 30, Bronze=22 },
        new ChartDataModel { Country= "Italy", Gold= 35, Silver= 40, Bronze=37 },
        new ChartDataModel { Country= "Sweden", Gold= 30, Silver= 25, Bronze=27 }
    };
}